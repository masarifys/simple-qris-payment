# Duitku Payment Gateway Configuration
DUITKU_MERCHANT_CODE=your_merchant_code_here
DUITKU_API_KEY=your_api_key_here

# Environment
NODE_ENV=production

# Duitku API URL
# Use sandbox for testing: https://sandbox.duitku.com/webapi/api
# Use production: https://passport.duitku.com/webapi/api
DUITKU_BASE_URL=https://sandbox.duitku.com/webapi/api

# Optional: Custom callback URLs (auto-generated if not set)
# DUITKU_CALLBACK_URL=https://yourdomain.com/callback
# DUITKU_RETURN_URL=https://yourdomain.com/success
# DUITKU_ERROR_URL=https://yourdomain.com/error

# Port (optional, defaults to 3000)
PORT=3000
